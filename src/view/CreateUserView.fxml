            <Font size="30.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#backToHome" opacity="0.0" prefHeight="70.0" prefWidth="70.0" text="Home" StackPane.alignment="TOP_LEFT">
