<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="panel" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="700.0" styleClass="createbg" stylesheets="@CreateUserView.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT">
         <image>
            <Image url="@../resources/home.png" />
         </image>
         <StackPane.margin>
            <Insets left="25.0" top="25.0" />
         </StackPane.margin>
      </ImageView>
      <Label fx:id="newUserLabel" text="Create a New User" textFill="#3b444b" StackPane.alignment="TOP_RIGHT">
         <font>
            <Font size="48.0" />
         </font>
         <StackPane.margin>
            <Insets right="25.0" top="25.0" />
         </StackPane.margin>
      </Label>
      <HBox alignment="CENTER" maxHeight="-Infinity" StackPane.alignment="BOTTOM_CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#cancelAction" prefHeight="70.0" prefWidth="140.0" style="-fx-border-radius: 50 50 50 50; -fx-background-color: #FFFAFA; -fx-border-color: black; -fx-background-radius: 50;" text="Cancel" StackPane.alignment="BOTTOM_CENTER">
               <font>
                  <Font size="30.0" />
               </font>
               <StackPane.margin>
                  <Insets bottom="50.0" />
               </StackPane.margin>
               <HBox.margin>
                  <Insets right="100.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#saveUser" prefHeight="70.0" prefWidth="140.0" style="-fx-border-radius: 50 50 50 50; -fx-background-color: #FFFAFA; -fx-border-color: black; -fx-background-radius: 50;" text="Save" StackPane.alignment="BOTTOM_CENTER">
               <StackPane.margin>
                  <Insets bottom="140.0" />
               </StackPane.margin>
               <font>
                  <Font size="30.0" />
               </font>
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </Button>
         </children>
         <StackPane.margin>
            <Insets bottom="75.0" />
         </StackPane.margin>
      </HBox>
      <Button mnemonicParsing="false" onAction="#backToHome" opacity="0.0" prefHeight="70.0" prefWidth="70.0" text="Home" StackPane.alignment="TOP_LEFT">
         <StackPane.margin>
            <Insets left="25.0" top="25.0" />
         </StackPane.margin>
      </Button>
      <TextField fx:id="nameText" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="70.0" prefWidth="500.0" promptText="*Name" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets bottom="120.0" left="100.0" right="100.0" />
         </StackPane.margin>
         <font>
            <Font size="32.0" />
         </font>
      </TextField>
      <TextField fx:id="imgText" alignment="CENTER" editable="false" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="70.0" prefWidth="500.0" promptText="Upload an Image">
         <StackPane.margin>
            <Insets left="100.0" right="100.0" top="50.0" />
         </StackPane.margin>
         <font>
            <Font size="32.0" />
         </font>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TextField>
      <Button mnemonicParsing="false" onAction="#uploadImg" prefHeight="70.0" prefWidth="70.0" text="^">
         <StackPane.margin>
            <Insets left="430.0" top="50.0" />
         </StackPane.margin>
         <font>
            <Font size="32.0" />
         </font>
      </Button>
   </children>
</StackPane>
