            <Insets left="25.0" top="25.0" />
         </StackPane.margin>
      </Button>
      <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="70.0" prefWidth="500.0" promptText="*Name" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets bottom="120.0" left="100.0" right="100.0" />
         </StackPane.margin>
         <font>
            <Font size="32.0" />
         </font>
      </TextField>
      <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="70.0" prefWidth="500.0" promptText="Upload an Image">
         <StackPane.margin>
            <Insets left="100.0" right="100.0" top="50.0" />
         </StackPane.margin>
         <font>
            <Font size="32.0" />
         </font>
      </TextField>
      <Button mnemonicParsing="false" onAction="#uploadImg" prefHeight="70.0" prefWidth="70.0" text="^">
         <StackPane.margin>
            <Insets left="430.0" top="50.0" />
         </StackPane.margin>
         <font>
            <Font size="32.0" />
         </font>
      </Button>
   </children>
</StackPane>
